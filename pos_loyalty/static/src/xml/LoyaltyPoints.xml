<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="LoyaltyPoints" owl="1">
        <div class='loyalty-points' t-att-class="{'negative': negative, 'oe_hidden': hidden}">
            <div class='loyalty-points-title'>Points</div>
            <t t-if='points_won'>
                <div class="loyalty-points-won">
                    <span class='value'>+<t
                            t-esc='env.pos.format_pr(points_won,rounding)'
                        /></span>
                </div>
            </t>
            <t t-if='points_spent'>
                <div class="loyalty-points-spent">
                    <span class='value'>-<t
                            t-esc='env.pos.format_pr(points_spent,rounding)'
                        /></span>
                </div>
            </t>
            <div class='loyalty-points-total'>
                <span class='value'>
                    <t t-esc='env.pos.format_pr(points_total,rounding)' />
                </span>
            </div>
        </div>
    </t>

</templates>
